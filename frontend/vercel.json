{
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "nodejs": "18.x",
  "build": {
    "env": {
      "NODE_VERSION": "18.19.0",
      "NPM_CONFIG_FUND": "false",
      "NPM_CONFIG_AUDIT": "false"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
