{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "18",
      "NPM_CONFIG_OPTIONAL": "false",
      "SKIP_OPTIONAL_DEPS": "true"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
